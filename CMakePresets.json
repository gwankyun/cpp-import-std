{
    "version": 10,
    "configurePresets": [
        {
            "name": "base",
            "hidden": true,
            "$comment": "基礎預設",
            "binaryDir": "${sourceDir}/build/${presetName}"
        },
        {
            "name": "msvc",
            "$comment": "模塊需要VS2022",
            "description": "Visual Studio 17 2022",
            "inherits": "base",
            "generator": "Visual Studio 17 2022"
        },
        {
            "name": "ninja",
            "hidden": true,
            "inherits": "base",
            "generator": "Ninja Multi-Config",
            "$comment": "clang需要指定ninja生成器"
        },
        {
            "name": "clang-mingw",
            "inherits": "ninja",
            "description": "Clang-MinGW",
            "cacheVariables": {
                "$comment": "指定編譯器路徑",
                "CMAKE_C_COMPILER": "$env{LLVM_MINGW_ROOT}/bin/clang.exe",
                "CMAKE_CXX_COMPILER": "$env{LLVM_MINGW_ROOT}/bin/clang++.exe"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "msvc-debug",
            "configurePreset": "msvc",
            "configuration": "Debug"
        },
        {
            "name": "msvc",
            "configurePreset": "msvc",
            "configuration": "Release"
        },
        {
            "name": "clang-mingw-debug",
            "configurePreset": "clang-mingw",
            "configuration": "Debug"
        },
        {
            "name": "clang-mingw",
            "configurePreset": "clang-mingw",
            "configuration": "Release"
        }
    ]
}